  @{X}@  constexpr fp<@{X}@>::half;
  @{X}@  constexpr fp<@{X}@>::epsilon;
  @{X}@  constexpr fp<@{X}@>::inf;
  @{X}@  constexpr fp<@{X}@>::nan;
  @{X}@  constexpr fp<@{X}@>::denorm_min;
  @{X}@  constexpr fp<@{X}@>::min;
  @{X}@  constexpr fp<@{X}@>::max;
