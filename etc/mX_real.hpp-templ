  //
  // Enum-Class definition of the internal Algorithms
  //
  enum class Algorithm {
                        //
                        Accurate = 0,
                        Sloppy   = 1,
                        Quasi    = 2,
                        //
                        // name aliasing
                        IEEE     = Accurate,
                        PairWise = Quasi,
                        PairArithmetic = Quasi,
                        Default  = Accurate
  };

  template < Algorithm Aa = Algorithm::Accurate, Algorithm Ab = Algorithm::Accurate >
  struct commonAlgorithm {
    static Algorithm constexpr algorithm =
      ( Aa == Algorithm::Accurate && Ab == Algorithm::Accurate ) ?
      Algorithm::Accurate :
      ( Aa == Algorithm::Quasi || Ab == Algorithm::Quasi ) ?
      Algorithm::Quasi : Algorithm::Sloppy;
  };

  template < Algorithm A >
  struct accurateAlgorithm {
    static Algorithm constexpr algorithm =
      A == Algorithm::Quasi ? Algorithm::Sloppy : Algorithm::Accurate;
  };

  template < Algorithm A >
  struct inaccurateAlgorithm {
    static Algorithm constexpr algorithm =
      A == Algorithm::Accurate ? Algorithm::Sloppy : Algorithm::Quasi;
  };

  std::string toString( Algorithm A ) NOEXCEPT {
    if ( A==Algorithm::Quasi ) return "Quasi";
    if ( A==Algorithm::Sloppy ) return "Sloppy";
    if ( A==Algorithm::Accurate ) return "Accurate";
    return "Unknow";
  }

  template < Algorithm A >
  struct if_A_noQuasi { static bool constexpr value = ( A != Algorithm::Quasi ); };
  template < Algorithm Aa, Algorithm Ab >
  struct if_A_owAble { static bool constexpr value =
        ( Aa==Ab ) ||
 	( Aa==Algorithm::Quasi ) ||
	( Aa==Algorithm::Sloppy && Ab!=Algorithm::Quasi ); };


  //
  // generic terms (const, func, and bit ops)
  //
#if __cplusplus < 201703L || defined(__INTEL_LLVM_COMPILER) || defined(__INTEL_CLANG_COMPILER)
#  define	STATIC_VAR	static
#else
#  define	STATIC_VAR	static inline
#endif
  //
@@@{ X float double
  template <>
  struct fp<@{X}@> {
    static bool   constexpr value = true;
    static bool   constexpr use_dynamic_digits = false;

    STATIC_VAR @{X}@ constexpr zero    = @{X}@(0);
    STATIC_VAR @{X}@ constexpr one     = @{X}@(1);
    STATIC_VAR @{X}@ constexpr two     = @{X}@(2);
    STATIC_VAR @{X}@ constexpr half    = @{X}@(0.5);

    STATIC_VAR @{X}@ constexpr epsilon    = std::numeric_limits<@{X}@>::epsilon();
    STATIC_VAR @{X}@ constexpr epsiloni   = one/std::numeric_limits<@{X}@>::epsilon();
    STATIC_VAR @{X}@ constexpr nan        = std::numeric_limits<@{X}@>::quiet_NaN();
    STATIC_VAR @{X}@ constexpr inf        = std::numeric_limits<@{X}@>::infinity();
    STATIC_VAR @{X}@ constexpr denorm_min = std::numeric_limits<@{X}@>::denorm_min();
    STATIC_VAR @{X}@ constexpr min        = std::numeric_limits<@{X}@>::min();
    STATIC_VAR @{X}@ constexpr max        = std::numeric_limits<@{X}@>::max();

    STATIC_VAR int constexpr digits       = std::numeric_limits<@{X}@>::digits;
    STATIC_VAR int constexpr digits10     = std::numeric_limits<@{X}@>::digits10;
    STATIC_VAR int constexpr max_digits10 = std::numeric_limits<@{X}@>::max_digits10;

    static INLINE auto constexpr isinf       ( @{X}@  const a ) NOEXCEPT {
      return std::isinf( a );
    }
    static INLINE auto constexpr isnan       ( @{X}@  const a ) NOEXCEPT {
      return std::isnan( a );
    }
    static INLINE auto constexpr copysign    ( @{X}@  const a, @{X}@  const b ) NOEXCEPT {
      return std::copysign( a, b );
    }
    static INLINE auto constexpr signbit     ( @{X}@  const a ) NOEXCEPT {
      return std::signbit( a );
    }
    static INLINE auto constexpr is_zero     ( @{X}@  const a ) NOEXCEPT {
      return a == fp<@{X}@>::zero;
    }
    static INLINE auto constexpr is_positive ( @{X}@  const a ) NOEXCEPT {
      return a >  fp<@{X}@>::zero;
    }
    static INLINE auto constexpr is_negative ( @{X}@  const a ) NOEXCEPT {
      return a <  fp<@{X}@>::zero;
    }
    static INLINE auto constexpr fabs ( @{X}@ const a ) NOEXCEPT {
      return std::fabs( a );
    }
    static INLINE auto constexpr sqrt ( @{X}@ const a ) NOEXCEPT {
      return std::sqrt( a );
    }
    static INLINE auto constexpr fma ( @{X}@ const a, @{X}@ const b, @{X}@ const c ) NOEXCEPT {
      return std::fma( a, b, c );
    }
    static INLINE auto rand () NOEXCEPT {
      return std::rand();
    }

  };
